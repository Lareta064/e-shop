//=============== multi sliders =================
section.multi-sliders
	.container
		.multi-sliders-grid
			//========= column slider 1 ============
			.multi-sliders-column
				.h2 Рекомендуемые
				.column-slider.owl-carousel
					.column-slider__item
						+pc-mini(1,2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(2,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(3,2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						
					.column-slider__item
						+pc-mini(3,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(2, 1,'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(1,3, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
			
			//========= column slider 2 ============
			.multi-sliders-column
				.h2 Новинка
				.column-slider.owl-carousel
					.column-slider__item
						+pc-mini(1, 2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(2, 1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(3, 1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						
					.column-slider__item
						+pc-mini(3, 2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(2, 1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(1, 2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')

			//========= column slider 3 ============
			.multi-sliders-column
				.h2 Товары со скидкой
				.column-slider.owl-carousel
					.column-slider__item
						+pc-mini(1,2, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб','sale', '42 500 руб')
						+pc-mini(2,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб','sale', '42 500 руб')
						+pc-mini(3,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб','sale', '42 500 руб')

			//========= column slider 3 ============
			.multi-sliders-column
				.h2 Хиты продаж
				.column-slider.owl-carousel
					.column-slider__item
						+pc-mini(3,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
						+pc-mini(2,1, 'Apple AirPort Express (MC414)', 'in', 0, '38 499 руб')
