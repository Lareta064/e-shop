									+pc('3', 33, 'Apple iPhone 13 Pro 1TB Graphite (MLVV3)', 'in', '4')
					
					//====== основной контент ======
					.grid-wrapper-body
						+breadcrumbs(
							{link: "index.html", text: 'Главная'},
							{link: "category-page.html", text: 'Аудио техника'},
						)
						h2.h2 Аудио техника
						.category-products-block.filtered-block
							//====== когда нет товаров в категории =========
							.category-products-empty
								img(src="./img/category-list/cat2.png", width="100" height="100" alt="img")
								p В этой категории нет товаров.
								.button-wrapper
									a(href="main_2.html").btn Продолжить
