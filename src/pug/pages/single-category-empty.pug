						.aside-column
							.h2 Хиты продаж
							.aside-column-slider
								.products-carousel-item
									+pc('1', 11, 'Apple iPhone 13 Pro 1TB Silver (MLVW3) Apple iPhone 13 Pro 1TB Silver', 'in', '4.5')
								.products-carousel-item
									+pc('2', 22, 'Apple iPhone 12 64GB Purple (MJNM3)', 'out', '5')
