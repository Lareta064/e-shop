extends ../layouts/layout.pug

block content
	//======== каталог меню на мобильной версии ============
	include ../blocks/_multi-level-menu

	//======== user modal mobile ============
	include ../blocks/_user-menu-mobile
	
	//======== header ============
	include ../sections/_header
	
	//======== owl carousel ============
	include ../sections/_header-slider

	//======== benefits ============
	include ../sections/_benefits

	//======== секция с карточками ============
	include ../sections/_products

	//========карточка-баннер продукта ============
	section.product-banner
		.container
			.product-banner__wrapper
				.pb-card
					.pb-card__header
						img(src="./img/product-banner-logo1.png", width="100" height="20" alt="alt")
						.pb-card__label
							span от
							span 22 799 грн
					.pb-card__img
						img(src="./img/product-banner1.png", alt="alt")
					.pb-card__title ZenBook Pro Duo
					.pb-card__text 
						p ZenBook Pro Duo UX581GV — флагманский ноутбук премиальной линейки компании Asus.
				
				//=single card banner ========
				.pb-card.pb-card--light
					.pb-card__header
						img(src="./img/product-banner-logo2.png", width="100" height="20" alt="alt")
						.pb-card__label
							span от
							span 1 799 грн
					.pb-card__img
						img(src="./img/product-banner2.png", alt="alt")
					.pb-card__title Аксессуары для sony playstation&nbsp;5
					.pb-card__text 
						p Беспроводная гарнитура PULSE 3D™Беспроводная гарнитура PULSE 3D™

