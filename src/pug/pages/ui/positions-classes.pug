include ../../layouts/_mixins-links.pug
block variables

<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")

		//====убрать синий цвет у ссылок в сафари ========
		meta(name="format-detection" content="telephone=no")
		link(rel="stylesheet", href="../css/main.css")
		title UI-KIT

	body.body-dashboard

		include ../../ui/ui-navigation.pug

		block content
			.container-dashboard
				h2 Вспомогрательные классы

				.container-dashboard__content
					pre.
						.flex-wrapper, .flex-justify,.svg-btn,.btn-wrapper, .flex-center{
							display: flex;
							align-items: center;
						}
						.flex-center{justify-content: center;}
						.flex-justify{
							justify-content: space-between;
						}
						.svg-btn{
							justify-content: center;
							border-radius: 8px;
						}
						.text-bold{font-weight: 600;}
						.drop-block{
							
							border-radius: 10px;
							-webkit-box-shadow: 6px 6px 19px rgba(0, 0, 0, 0.06);
							box-shadow: 6px 6px 19px rgba(0, 0, 0, 0.06);
							padding: 15px 20px;
							display: none;
							
							&.visible{
								display: block;
							
							}
						}
						.pos-rel{position: relative;}
						.text-center{text-align: center;}
						.m-auto{
							margin-left: auto;
							margin-right: auto;
						}
						.mt-30{margin-top: 30px;}

						.scroll-y{
							overflow-x: hidden;
							overflow-y: auto;
							scrollbar-width: 5px;
							scrollbar-color:transparent,  #DEE2E6;
							&::-webkit-scrollbar{
								width: 5px;
								height: 20px;
							}
							&::-webkit-scrollbar-thumb{
								border-radius: 10px;
								background-color: #DEE2E6;
							}
							&::-webkit-scrollbar-track{
								background-color: transparent;
							}
						}