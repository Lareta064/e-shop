				h2 счетчик
				.counter-block
					button.counter-decrease
					input.counter-value(type="number" value="1" name="")
					button.counter-increase

				script.
					let minusBtn = $('.counter-decrease');
					let plusBtn = $('.counter-increase');


					plusBtn.on('click', function (e) {
						e.preventDefault()
						startCount = $(this).siblings('.counter-value').val();
						startCount = ++startCount;
						$(this).siblings('.counter-value').val(startCount);
					});

					minusBtn.on('click', function (e) {
						e.preventDefault()
						startCount = $(this).siblings('.counter-value').val();
						if (startCount > 1) {
							startCount = --startCount;
							$(this).siblings('.counter-value').val(startCount);

						}
					});

					
